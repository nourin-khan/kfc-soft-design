<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="KFC_Table_GUI.foodStatus"
	x:Name="UserControl" Height="50" Width="280">

	<Grid x:Name="LayoutRoot" HorizontalAlignment="Left" Height="50" VerticalAlignment="Bottom" Width="280">
		<StackPanel x:Name="status" Orientation="Horizontal" Margin="0,0,-3.334,0">
			<Image x:Name="image" Width="46.5" Margin="5,5,5,8" Source="/KFC_Table_GUI;component/Images/1.png" d:LayoutOverrides="VerticalAlignment"/>
			<TextBlock x:Name="name" TextWrapping="Wrap" Text="Món 1" Margin="5,10,5,0" Width="62.46" Height="21" Foreground="#FFEF1515" HorizontalAlignment="Center" VerticalAlignment="Center"/>
			<ProgressBar x:Name="progress" Width="128" Margin="5,10,5,0" Height="21" VerticalAlignment="Center" HorizontalAlignment="Center"/>
		</StackPanel>
	</Grid>
</UserControl>